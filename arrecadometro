<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<title>Contador de Doações - Estilo SBT</title>

<style>
    body {
        background: #0f0f0f;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .contador {
        display: flex;
        gap: 8px;
        transform: scale(2);
    }

    .digit {
        width: 50px;
        height: 80px;
        background: linear-gradient(180deg, #ffffff, #e8e8e8);
        border-radius: 10px;
        font-size: 48px;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        color: #000;
        box-shadow: 0 0 18px rgba(255,255,255,0.7); /* brilho */
        overflow: hidden;
    }

    /* animação flip */
    .flip {
        animation: flipAnim 0.4s ease;
    }

    @keyframes flipAnim {
        0%   { transform: rotateX(0deg); }
        50%  { transform: rotateX(-90deg); }
        100% { transform: rotateX(0deg); }
    }
</style>
</head>

<body>

<div class="contador" id="contador"></div>

<script>
    let valor = 0;

    function format(n) {
        return n.toString().padStart(8, "0"); /* 8 dígitos estilo teleton */
    }

    function render() {
        const area = document.getElementById("contador");
        area.innerHTML = "";
        format(valor).split("").forEach(d => {
            const box = document.createElement("div");
            box.classList.add("digit");
            box.textContent = d;
            area.appendChild(box);
        });
    }

    function atualizarValor(novo) {
        const antigo = format(valor);
        const novoStr = format(novo);
        valor = novo;

        const boxes = document.querySelectorAll(".digit");

        novoStr.split("").forEach((d, i) => {
            if (d !== antigo[i]) {
                boxes[i].classList.add("flip");
                setTimeout(() => {
                    boxes[i].textContent = d;
                }, 200);
                setTimeout(() => {
                    boxes[i].classList.remove("flip");
                }, 400);
            }
        });
    }

    render();

    /* EXEMPLO — contador sobe sozinho a cada 2s */
    setInterval(() => {
        atualizarValor(valor + Math.floor(Math.random() * 1000));
    }, 2000);
</script>

</body>
</html>

